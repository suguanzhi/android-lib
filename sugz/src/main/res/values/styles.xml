<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="anim_y_stranslate">
        <item name="android:windowEnterAnimation">@anim/translate_y_up_show</item>
        <item name="android:windowExitAnimation">@anim/translate_y_down_hide</item>
    </style>

    <style name="anim_scale">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>

    <style name="window_transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="progressbar_horizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/sgz_progressbar_horizontal_r20</item>
        <item name="android:minHeight">6dp</item>
    </style>

    <style name="Button">
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/btn_width</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button_min">
        <item name="android:textSize">@dimen/btn_text_size_min</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/btn_width_min</item>
        <item name="android:layout_height">@dimen/btn_height_min</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Card">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="Input">
        <item name="android:layout_width">@dimen/input_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text</item>
    </style>

    <style name="Input.Wrap" parent="Input">
        <item name="android:padding">@dimen/input_padding</item>
    </style>

    <style name="Input.Single" parent="Input">
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">@dimen/input_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/input_padding</item>
        <item name="android:paddingEnd">@dimen/input_padding</item>
    </style>

    <style name="Input.R" parent="Input.Wrap">
        <item name="android:background">@drawable/shape_input_r</item>
    </style>

    <style name="Input.R.Background" parent="Input.Wrap">
        <item name="android:background">@drawable/shape_input_r_with_background</item>
    </style>

    <style name="Input.R.Single.Background" parent="Input.Single">
        <item name="android:background">@drawable/shape_input_r_with_background</item>
    </style>

    <style name="Input.Circle" parent="Input.Single">
        <item name="android:background">@drawable/shape_input_circle</item>
    </style>

    <style name="Input.Circle.White" parent="Input.Single">
        <item name="android:background">@drawable/shape_input_circle_with_background</item>
    </style>

    <style name="Divider">
        <item name="android:background">@color/divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
    </style>

    <style name="TextMain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text</item>
    </style>

    <style name="TextSecond">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_second</item>
        <item name="android:textSize">@dimen/text_second</item>
    </style>
</resources>