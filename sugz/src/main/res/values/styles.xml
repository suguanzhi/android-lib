<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="anim_y_stranslate">
        <item name="android:windowEnterAnimation">@anim/translate_y_up_show</item>
        <item name="android:windowExitAnimation">@anim/translate_y_down_hide</item>
    </style>

    <style name="anim_scale">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>

    <style name="window_transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="progressbar_horizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progressbar_horizontal</item>
        <item name="android:minHeight">6dp</item>
    </style>

    <style name="Button">
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:layout_width">@dimen/btn_width</item>
        <item name="android:layout_height">@dimen/btn_height</item>
    </style>

    <style name="Button.Danger" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_btn_danger</item>
    </style>

    <style name="Button.Confirm" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_btn_confirm</item>
    </style>

    <style name="Button.Disable" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_btn_disable</item>
    </style>

    <style name="Button.Warm" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_btn_warm</item>
    </style>

    <style name="Button.Primary" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_btn_primary</item>
    </style>

    <style name="Button.Normal" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_btn_sk_normal</item>
    </style>

    <style name="Button.Strock.Confirm" parent="Button">
        <item name="android:textColor">@color/btn_confirm</item>
        <item name="android:background">@drawable/shape_btn_sk_confirm_sd_white</item>
    </style>

    <style name="Button.Strock.Danger" parent="Button">
        <item name="android:textColor">@color/btn_danger</item>
        <item name="android:background">@drawable/shape_btn_sk_danger_sd_white</item>
    </style>

    <style name="Button.Strock.Disable" parent="Button">
        <item name="android:textColor">@color/btn_danger</item>
        <item name="android:background">@drawable/shape_btn_sk_disable_sd_white</item>
    </style>

    <style name="Button.Strock.Normal" parent="Button">
        <item name="android:textColor">@color/btn_normal</item>
        <item name="android:background">@drawable/shape_btn_sk_normal_sd_white</item>
    </style>

    <style name="Input">
        <item name="android:layout_width">@dimen/input_width</item>
        <item name="android:layout_height">@dimen/input_height</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Input.R5" parent="Input">
        <item name="android:background">@drawable/shape_r10_input</item>
    </style>

    <style name="Input.R5.White" parent="Input">
        <item name="android:background">@drawable/shape_r10_input2</item>
    </style>

    <style name="Input.R10" parent="Input">
        <item name="android:background">@drawable/shape_r10_input</item>
    </style>

    <style name="Input.R10.White" parent="Input">
        <item name="android:background">@drawable/shape_r10_input2</item>
    </style>

    <style name="Input.R50" parent="Input">
        <item name="android:background">@drawable/shape_r50_input</item>
    </style>

    <style name="Input.R50.White" parent="Input">
        <item name="android:background">@drawable/shape_r50_input2</item>
    </style>
</resources>