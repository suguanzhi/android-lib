<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_gravity="center">

    <com.android.sgzcommon.view.imageview.CornerImageView
        android:id="@+id/civ_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:adjustViewBounds="true"
        android:background="@color/grey_300"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="@dimen/icon_main"
        android:layout_height="@dimen/icon_main"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:padding="1dp"
        android:background="@drawable/shape_r20_sd_white"
        android:src="@drawable/ic_sgz_delete_circle_red" />

    <ProgressBar
        android:id="@+id/pb_progress"
        style="@style/progressbar_horizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:max="100"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_progress_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="0%"
        android:textColor="@color/white"
        android:textSize="8sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_upload_state"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_r10_sd_white"
        android:src="@drawable/ic_sgz_success"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/pb_loading"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true" />
</RelativeLayout>