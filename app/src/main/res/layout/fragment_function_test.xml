<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/green_50"
    android:gravity="center"
    android:orientation="vertical">

    <EditText style="@style/Input.R50.White" />

    <Button
        android:id="@+id/btn_auto_dismiss_dialog"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/btn_height"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_btn_sk_confirm"
        android:text="定时隐藏Dialog" />

    <Button
        android:id="@+id/btn_string_list_dialog"
        style="@style/Button.Danger"
        android:layout_marginTop="10dp"
        android:text="文本列表Dialog" />

    <Button
        android:id="@+id/btn_web_layout"
        style="@style/Button.Confirm"
        android:layout_marginTop="10dp"
        android:text="weblayout" />
    <Button
        android:id="@+id/btn_web_ac"
        style="@style/Button.Confirm"
        android:layout_marginTop="10dp"
        android:text="BaseWebActivity" />

    <Button
        android:id="@+id/btn_qrcodet"
        style="@style/Button.Warm"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:text="扫码" />

    <com.android.sgzcommon.view.InputEditView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:value="2"
        app:text_size="25sp"/>

</LinearLayout>